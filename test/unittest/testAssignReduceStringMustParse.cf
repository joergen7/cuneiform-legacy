declare testAssignReduceStringMustParse;

deftask intelligify( out-stat : in-stat ) *{
    echo "Well, I assume that" `cat $in-stat` "... But one can never be sure." > $out-stat
}*

target intelligent-statement-list;

plain-statement-list = ~<'string-list.txt'>;

intelligent-statement-list = apply(
    task    : intelligify
    in-stat : plain-statement-list
);
